@model Table
    <form method="post" asp-controller="Table" asp-action="TableReservation">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <input asp-for="Name" placeholder="Name">
                    <select class="reserve">
                        <option value="value">1 Person</option>
                        <option value="value">2 Person</option>
                        <option value="value">4 Person</option>
                        <option value="value">6 Person</option>
                    </select>
                    <br>
                    <input type="time" placeholder="01.00am">
                </div>
                <div class="col-lg-6">
                    <input asp-for="Phone" placeholder="Phone">
                    <input asp-for="Email" placeholder="Email ID">
                    <input type="date" placeholder="mm/dd/yy">
                </div>
                <div class="col-lg-12">
                    <button type="submit">Book Now</button>
                </div>
            </div>
        </div>
    </form>