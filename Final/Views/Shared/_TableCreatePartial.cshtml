@model Table
    <form method="post" asp-controller="Table" asp-action="TableReservation">
        
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <input asp-for="Name" placeholder="Name">
                    <select asp-for="Person" class="reserve">
                        <option value="1">1 Person</option>
                        <option value="2">2 Person</option>
                        <option value="3">4 Person</option>
                        <option value="4">6 Person</option>
                    </select>
                    <input asp-for="Date" placeholder="mm/dd/yy">
                    <br>

                </div>
                <div class="col-lg-6">
                    <input asp-for="Phone" placeholder="Phone">
                    <input asp-for="Email" placeholder="Email ID">
                    
                </div>
                <div class="col-lg-12">
                    <button type="submit">Book Now</button>
                </div>
            </div>
        </div>
    </form>